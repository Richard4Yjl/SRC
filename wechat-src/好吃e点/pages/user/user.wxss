/**index.wxss**/
page {
    height: 100%;
    widows: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 120px;
  height: 120px;
  margin: 5px;
  border-radius: 50%;
}
.userinfo-text {
    height: fit-content;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.money-coupon-feedback {
    display: flex;
    flex-direction: row;
    height: 60px;
    width: 100%;
}
.money {
    display: flex;
    width: 33%;
    justify-content: center;
    align-items: center;
    border: 1px solid #ccc;
}
.coupon {
    display: flex;
    width: 33%;
    justify-content: center;
    align-items: center;
    border: 1px solid #ccc;
}
.feedback {
    display: flex;
    width: 33%;
    justify-content: center;
    align-items: center;
    border: 1px solid #ccc;
}
.order-list-container {
    width: 100%;
   position: absolute;
   top: 217px;
   bottom: 0;
}
.order-list-title{
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #ffffdf;
}
.order-list {
    height: 315px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.order-list-item {
    height: 40px;
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: row;
    border: 1px solid #ddd;
    margin-top: 3px;
}
.order-list-recipe-container {
    width: 79%;
    height: 100%;
    border-right: 1px solid #aaa;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.order-list-recipe {
    display: flex;
    flex-wrap: wrap;
    font-size: 15px;
    margin-left: 10px;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow:ellipsis; 
}
.order-list-time {
    width: 21%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    font-size: 12px;
    text-align: center;
}