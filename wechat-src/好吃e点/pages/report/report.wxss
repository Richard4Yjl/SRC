swiper {
    margin: 10px;
}

.slide-image {
    width: 100%;
    height: 150px;
}
.report-detail-container {
    width: 100%;
    height: fit-content;
}
.report-item {
    width: 100%;
    height: 64px;
    display: flex;
    flex-direction: row;
}
.report-select-icon {
    width: 20%;
    height: 64px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.report-select-icon image {
    width: 32px;
    height: 32px;
}
.report-select-detail {
    height: 64px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-grow: 1;
    margin-left: 10px;
}
.report-select-detail-others textarea {
    width: 70%;
    height: 100px;
    border: 1px solid #aaa;
    position: relative;
    left: 23%;
    bottom: 50px;
}
.report-confirm-button {
    width: 70%;
    margin-top: 10px;
}